{
  "compilerOptions": {
    "target": "es2016", // Or a newer ECMAScript version
    "module": "commonjs",
    "outDir": "./dist", // Output directory for compiled JavaScript
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file casing
  },
  "include": ["src/**/*"] // Include all TypeScript files in the src directory
}
